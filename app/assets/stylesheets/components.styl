@import 'rupture'

#title
    cursor pointer
    position relative
    margin-left auto
    margin-right auto

    a
        color inherit

.smaller
    display inline
    margin-left 80%
    font-size 0.7em

.main-container
    text-align center

.subjects-container
    width 40% !important
    display inline-block
    margin-right 2%
    float left

    input[type=radio]
        display: none

        + label
            cursor pointer
            -webkit-transition color .2s ease-in
            -moz-transition color .2s ease-in
            -ms-transition color .2s ease-in
            -o-transition color .2s ease-in
            transition color .2s ease-in

        &:checked + label
            color #e74c3c

            &::before
                content: ''
                width: 100%
                display inline-block
                border-bottom 2px solid #c0392b
                float left
                position relative
                top calc(1em + 12px)
                z-index -1

    input[type=radio] + label
        font-family Lato, sans-serif
        font-size 1.5em
        letter-spacing 1px
        font-weight 300
        padding 5px
        margin-top 5px
        margin-bottom 5px

        &:hover
            color #e74c3c


    .subject
        width 100%
        margin-left -15%
        display inline-block


.tests-container
    display inline-block
    float left
    cursor pointer

    input[type=radio]
        display: none

    .test
        font-size 2.25em
        line-height 1
        margin-bottom 0
        display inline-block

        input[type=radio]:checked + label
            color #e74c3c
            background lighten(#999, 90%)

        &:nth-child(n)
            margin-bottom -15%

        label
            cursor pointer
            font-weight 500
            padding 10px
            font-size 45%

            &:hover
                color #e74c3c
                background lighten(#999, 90%)


.questions-container

    .question
        border-bottom 2px #e0e0e0 solid

        ul
            list-style-type none

        h2
            font-weight 500 !important
            font-size 1.25em

        p
            line-height 1.75 !important
            margin-top 10px !important


.no-tests-block,
.no-questions-block
    display block
    padding-top 10%
    font-family Lato, sans-serif
    font-size 1.5em
    line-height 0
    letter-spacing 1px
    font-weight 300
    opacity .75
    position relative
    z-index -1

.search-form-block
    position relative
    width 65%
    margin auto
    z-index -1
